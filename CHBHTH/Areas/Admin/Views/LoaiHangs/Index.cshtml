@model IEnumerable<CHBHTH.Models.LoaiHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Loại hàng</h2>

<p>
    @Html.ActionLink("Tạo loại hàng", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenLoai)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoai)
        </td>
        <td>
            <button class="btn btn-success">
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaLoai }, new { @style = "color:white;" })
            </button>
            <button class="btn btn-primary">
                @Html.ActionLink("Xem", "Details", new { id = item.MaLoai }, new { @style = "color:white;" })
            </button>
            <button class="btn btn-danger">
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaLoai }, new { @style = "color:white;" })
            </button>
        </td>
    </tr>
}

</table>
